{
    "compilerOptions": {
        "module": "CommonJS",
        "allowJs": false,
        "lib": [
            "DOM",
            "ES2021"
        ],
        "strictNullChecks": false,
        "skipLibCheck": true,
        "pretty": true,
        "suppressImplicitAnyIndexErrors": true,
        "noImplicitAny": false,
        "target": "ES2021",
        "outDir": "dist",
        "strict": true,
    },
    "exclude": [
        "node_modules",
        "tests"
    ]
}